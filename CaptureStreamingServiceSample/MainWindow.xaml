<Window x:Class="CaptureStreamingServiceSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:locators="clr-namespace:MvpMvvm.Locators;assembly=MvpMvvm"        
        xmlns:local="clr-namespace:CaptureStreamingServiceSample"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ObjectDataProvider x:Key="ViewModelProvider" 
                            ObjectType="{x:Type locators:ViewModelLocator}" 
                            MethodName="GetViewModel">
            <ObjectDataProvider.MethodParameters>
                <sys:String>MainWindowViewModel</sys:String>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource ViewModelProvider}" />
    </Window.DataContext>    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="27" />
                <RowDefinition Height="27" />
                <RowDefinition Height="27" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="IP" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Address}" d:Text="127.0.0.1" Margin="5, 1" VerticalAlignment="Center" />

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Port" Width="auto" Height="auto" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Port}" d:Text="5000" Margin="5, 1" VerticalAlignment="Center" />

            <Button Grid.Row="2" Grid.Column="0" Content="Load" Margin="1" Command="{Binding LoadHandlesCommand}" />
            <ComboBox Grid.Row="2" Grid.Column="1" Margin="5, 1" ItemsSource="{Binding ItemList}" DisplayMemberPath="Title" SelectedIndex="{Binding SelectedWindowsInfoIndex}" />
        </Grid>
        <StackPanel Grid.Column="1">
            <Button Content="Start Local Videosink" Command="{Binding StartLocalCommand}" />
            <Button Content="Start Enc Dec Streaming" Command="{Binding StartEncDecCommand}" />
            <Button Content="Start UDP Streaming" Command="{Binding StartUdpCommand}" />
            <Button Content="Stop" Command="{Binding StopCommand}" />
        </StackPanel>
    </Grid>
</Window>
